<body>
  <main class="app">
    <section class="card grid">
      <h1 class="title">Kalkulačka odečtu <span class="pill">výsledek = částka × (1 − %/100)</span></h1>
      <p class="muted">Zadej částku. Ve výchozím stavu se odečítá <b>5&nbsp;%</b>. Procento můžeš kdykoliv změnit.</p>

      <div class="grid">
        <div class="grid">
          <label for="amount">Vstupní částka</label>
          <input id="amount" type="text" inputmode="decimal" placeholder="např. 1 000 nebo 1000,50" autocomplete="off" />
        </div>

        <div class="row">
          <div class="grid" style="flex:1 1 160px;min-width:160px">
            <label for="percent">Odečíst (%)</label>
            <input id="percent" type="number" min="0" max="100" step="0.01" value="5" />
          </div>
          <div class="actions">
            <button class="chip" data-preset="5">5 %</button>
            <button class="chip" data-preset="10">10 %</button>
            <button class="chip" data-preset="15">15 %</button>
            <button class="chip" data-preset="20">20 %</button>
          </div>
        </div>

        <div class="result" aria-live="polite">
          <div class="row" style="justify-content:space-between;align-items:center">
            <div class="value" id="out">—</div>
            <button class="btn" id="copyBtn">Kopírovat</button>
          </div>
          <div class="muted" id="detail">Zadej číselnou hodnotu.</div>
        </div>
      </div>
      <footer>Formát: české oddělovače. Výsledek se přepočítává živě.</footer>
    </section>
  </main>

  <script>
    const amount = document.getElementById('amount');
    const percent = document.getElementById('percent');
    const out = document.getElementById('out');
    const detail = document.getElementById('detail');
    const copyBtn = document.getElementById('copyBtn');
    const nf = new Intl.NumberFormat('cs-CZ',{minimumFractionDigits:2,maximumFractionDigits:2});

    const parseNum = s => {
      if(!s) return NaN;
      s = s.toString().trim().replace(/\s+/g,'').replace(',', '.').replace(/[^0-9.\-]/g,'');
      const parts = s.split('.');
      if(parts.length>2) s = parts.shift()+'.'+parts.join('');
      const v = parseFloat(s);
      return isFinite(v) ? v : NaN;
    };

    function recalc(){
      const n = parseNum(amount.value);
      const p = parseFloat(percent.value);
      if(isNaN(n) || isNaN(p)){ out.textContent='—'; detail.textContent='Zadej číselnou hodnotu.'; return; }
      const result = n*(1 - p/100);
      const diff = n - result;
      out.textContent = nf.format(result)+' Kč';
      detail.textContent = `Z původních ${nf.format(n)} Kč odečteno ${nf.format(diff)} Kč (${p}% ).`;
      document.querySelectorAll('.chip').forEach(ch=>ch.dataset.active = (parseFloat(ch.dataset.preset)===p));
    }

    amount.addEventListener('input', recalc);
    percent.addEventListener('input', recalc);
    document.querySelectorAll('.chip').forEach(btn=>{
      btn.addEventListener('click', ()=>{ percent.value = btn.dataset.preset; recalc(); });
    });
    copyBtn.addEventListener('click', async ()=>{
      const t = out.textContent.replace(/\s*Kč$/,'');
      try{ await navigator.clipboard.writeText(t); copyBtn.textContent='Zkopírováno'; setTimeout(()=>copyBtn.textContent='Kopírovat',1000);}catch(e){ copyBtn.textContent='Chyba'; setTimeout(()=>copyBtn.textContent='Kopírovat',1000);}
    });

    recalc();
  </script>
</body>
</html>
